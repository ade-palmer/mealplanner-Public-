@model ShoppingViewModel

@{
    ViewData["Title"] = "Create Shopping";
}

    <div class="card mt-4">
        <div class="card-header">
            <partial name="_AdminTabs" />
        </div>

        <div class="card-body">
            <div class="tab-content mt-3 mx-md-5">
                <div class="tab-pane active" id="Shopping" role="tabpanel" aria-labelledby="shopping-tab">
                    <p class="text-center">Select and Add your shopping days</p>
                    <div class="d-flex justify-content-center">
                        <form class="form-inline" asp-action="CreateShopping">
                            <input type="hidden" asp-for="ShoppingId" />
                            <input type="hidden" asp-for="MealPlanId" />
                            <div class="form-group mx-2 mb-2">
                                <label asp-for="Date" class="sr-only"></label>
                                <input asp-for="Date" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Add</button>
                        </form>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                    <span asp-validation-for="Date" class="text-danger d-block text-center"></span>
                </div>
            </div>
        </div>
    </div>