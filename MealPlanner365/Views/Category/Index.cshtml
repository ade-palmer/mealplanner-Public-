@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Administration";
}

<div class="card mt-4">
    <div class="card-header">
        <partial name="_AdminTabs" />
    </div>

    <div class="card-body">
        <div class="tab-content mt-3 mx-md-5">
            <div class="tab-pane active" id="Category" role="tabpanel" aria-labelledby="category-tab">
                @if (!Model.Any())
                {
                    <a class="float-right " asp-controller="Category" asp-action="CreateCategory" asp-route-mealPlanId="@ViewData["MealPlan"]">
                        <i class="fas fa-plus-square fa-2x text-success"></i>
                    </a>
                    <h5>No categories to display</h5>
                    <p>Add your food categories like Meat, Fish, Salad etc.</p>

                }
                else
                {
                    <a class="float-right pb-1 pr-1" asp-controller="Category" asp-action="CreateCategory" asp-route-mealPlanId="@ViewData["MealPlan"]">
                        <i class="fas fa-plus-square fa-2x text-success"></i>
                    </a>
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                        <td align="right" nowrap>
                                            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@category.CategoryId">
                                                <i class="fas fa-minus-square fa-2x text-danger mr-2"></i>
                                            </a>
                                            <a asp-controller="Category" asp-action="EditCategory" asp-route-categoryId="@category.CategoryId">
                                                <i class="fas fa-pen-square fa-2x text-info"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>